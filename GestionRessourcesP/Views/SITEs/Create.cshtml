@using GestionRessourcesP.Models
@model ReservationSalleViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>NOUVEAU SITE</h4>

        <h4 class="col-md-2">@Html.ActionLink("Ajouter un Bureau", "Create", "BUREAUx")</h4>
        <br />
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-primary">
            <div class="panel-heading">Info-Site</div>
            <div class="panel-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.CODE_SITE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.CODE_SITE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CODE_SITE, "", new { @class = "text-danger" })
                    </div>

                    @Html.LabelFor(model => model.LIBELLE_SITE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.LIBELLE_SITE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LIBELLE_SITE, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SUPERFICIE_SITE, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.SUPERFICIE_SITE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SUPERFICIE_SITE, "", new { @class = "text-danger" })
                    </div>
                </div>
               </div>
            </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Enregistrer" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Retour à la Liste", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
