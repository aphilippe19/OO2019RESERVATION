@model IEnumerable<GestionRessourcesP.Models.MOBILIER>

@{
    ViewBag.Title = "Index";
}

<h2>Liste Des Equipements</h2>

<p>
    @Html.ActionLink("Ajouter Un Equipement", "Create", new { @class = "btn btn-default" })
</p>

<div class="panel panel-primary">
    <div class="panel-heading"> Info-Liste des Equipements </div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CODE_MOBILIER)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LIBELLE_MOBILIER)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MARQUE_MOBILIER)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MODELE_MOBILIER)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NUMSERIE_MOBILIER)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CODE_MOBILIER)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LIBELLE_MOBILIER)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MARQUE_MOBILIER)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MODELE_MOBILIER)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NUMSERIE_MOBILIER)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.ID_MOBILIER }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_MOBILIER }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.ID_MOBILIER }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
</div>